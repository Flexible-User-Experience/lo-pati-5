{% extends "mail/base_email.html.twig" %}

{% block content %}
    <wrapper class="light-grey-background">
        <container>
            <row>
                <columns small="8" large="8" valign="middle" class="normal-padding-top">
                    <a href="{{ absolute_url(path('front_app_homepage')) }}">
                        <img class="float-left" src="{{ absolute_url(asset('build/newsletter_logo_header.png')) }}" alt="{{ project_title }}">
                    </a>
                </columns>
                <columns small="4" large="4"></columns>
            </row>
            {% include "mail/fragment/hr_row_divider.html.twig" %}
            <row>
                <columns small="12" large="12">
                    <h6 class="h6-type">{{ subject }}</h6>
                    <spacer size="25"></spacer>
                    <p class="grey-color">{{ 'newsletter.email.confirmation.first_line_confirmation' | trans({ '%email%': user.email }) | raw }}</p>
                    <spacer size="40"></spacer>
                    <p class="grey-color">{{ 'newsletter.email.confirmation.second_line_confirmation' | trans }}</p>
                    <center>
                        <button class="alert large" href="{{ url('front_app_newsletter_subscribe', {token: user.token}) }}">{{ 'newsletter.email.confirmation.button_confirmation' | trans }}</button>
                    </center>
                    <spacer size="40"></spacer>
                    <p class="grey-color">{{ 'newsletter.email.confirmation.third_line_confirmation' | trans }}</p>
                    <p><a href="{{ url('front_app_newsletter_subscribe', {token: user.token}) }}">{{ url('front_app_newsletter_subscribe', {token: user.token}) }}</a></p>
                </columns>
            </row>
            {% include "mail/fragment/hr_row_divider.html.twig" %}
        </container>
    </wrapper>
{% endblock %}
