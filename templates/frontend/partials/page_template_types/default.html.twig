{% if page.imageFileName %}
    <div class="container-fluid" style="background-image:url('{{ asset('build/images/page_detail_header_backgroung.jpg') }}');background-size:cover;">
        <div class="row">
            <div class="text-center">
                <img src="{{ vich_uploader_asset(page, 'imageFile') | imagine_filter('1200xY') }}" class="img-fluid rounded-0" alt="{{ page.name }}" style="margin-bottom:-70px;border-bottom:solid {{ page.menuLevel1.color }} 20px;">
            </div>
        </div>
    </div>
{% endif %}
<div class="container mt-3 pt-3">
    <div class="row my-5 pt-5">
        <div class="col">
            <div class="position-relative">
                <div class="position-absolute top-50 start-50 translate-middle">
                    <div class="mini-colored-box-detail d-flex me-auto {{ page.menuLevel1.cssBackgroudClassColor }}"></div>
                    <div>
                        <span class="h6 card-title mb-0 d-inline-flex py-2 ps-2 pe-5 lp-bg-black text-white text-uppercase">{{ page.menuLevel1.name }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col text-center">
            <h1>{{ page.name }}</h1>
            <h2 class="h3 text-muted">{{ page.summary }}</h2>
            {% if page.realizationDateString or page.place or page.links or page.document1FileName or page.document2FileName %}
                <div class="card-group my-4">
                    {% if page.realizationDateString %}
                        <div class="card text-center lp-c-light-grey rounded-0 border-0{% if page.place or page.links or page.document1FileName or page.document2FileName %} border-end{% endif %}">
                            <div class="card-body">
                                <h5 class="card-title"><i class="far fa-calendar"></i></h5>
                                <p class="card-text">{{ page.realizationDateString }}</p>
                            </div>
                        </div>
                    {% endif %}
                    {% if page.place %}
                        <div class="card text-center lp-c-light-grey rounded-0 border-0{% if page.links or page.document1FileName or page.document2FileName %} border-end{% endif %}">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-map-marker-alt"></i></h5>
                                <p class="card-text">{{ page.place }}</p>
                            </div>
                        </div>
                    {% endif %}
                    {% if page.links %}
                        <div class="card text-center lp-c-light-grey rounded-0 border-0{% if page.document1FileName or page.document2FileName %} border-end{% endif %}">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-link"></i></h5>
                                <p class="card-text">{{ page.links | raw }}</p>
                            </div>
                        </div>
                    {% endif %}
                    {% if page.document1FileName %}
                        <div class="card text-center lp-c-light-grey rounded-0 border-0{% if page.document2FileName %} border-end{% endif %}">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-cloud-download-alt"></i></h5>
                                <p class="card-text">
                                    <a href="{{ vich_uploader_asset(page, 'document1File') }}" download="{{ page.document1FileName }}" class="btn btn-outline-primary">{% if page.titleDocument1 %}{{ page.titleDocument1 }}{% else %}{{ 'vich_uploader.link.download' | trans }}{% endif %}</a>
                                </p>
                            </div>
                        </div>
                    {% endif %}
                    {% if page.document2FileName %}
                        <div class="card text-center lp-c-light-grey rounded-0 border-0">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-cloud-download-alt"></i></h5>
                                <p class="card-text">
                                    <a href="{{ vich_uploader_asset(page, 'document2File') }}" download="{{ page.document2FileName }}" class="btn btn-outline-primary">{% if page.titleDocument2 %}{{ page.titleDocument2 }}{% else %}{{ 'vich_uploader.link.download' | trans }}{% endif %}</a>
                                </p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endif %}
            <hr>
        </div>
    </div>
    <div class="row my-5">
        <div class="col text-center">
            {{ page.description | raw }}
        </div>
    </div>
</div>
