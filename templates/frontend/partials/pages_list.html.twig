{% if pages | length > 0 %}
    {% for page in pages %}
        <div class="col-12 mb-5">
            <div class="row">
                <div class="col-4">
                    <div class="card border-0">
                        <div style="background-color:{{ page.menuLevel1.color }}" class="position-relative">
                            {% if is_archive_view %}
                                <a href="{{ path('front_app_archive_year_page_detail', {'menu': page.menuLevel1.slug, 'year': archive.year, 'slug': page.slug, 'id': page.id}) }}">
                                    <img src="{{ vich_uploader_asset(page, page.highlitedImageField) | imagine_filter(page.highlitedImageFilter) }}" class="card-img-top rounded-0{% if page.isHighlitedImageSquared %} w-235-px{% endif %}" alt="{{ page.name }}">
                                </a>
                            {% else %}
                                <a href="{{ path('front_app_page_detail', {'menu': page.menuLevel1.slug, 'submenu': page.menuLevel2.slug, 'date': page.publishDate | date(constant('App\\Entity\\AbstractBase::DATAGRID_TYPE_DATE_FORMAT')), 'page': page.slug}) }}">
                                    <img src="{{ vich_uploader_asset(page, page.highlitedImageField) | imagine_filter(page.highlitedImageFilter) }}" class="card-img-top rounded-0{% if page.isHighlitedImageSquared %} w-235-px{% endif %}" alt="{{ page.name }}">
                                </a>
                            {% endif %}
                            <div class="position-absolute bottom-0 start-0">
                                <div style="background-color:{{ page.menuLevel1.color }}" class="mini-colored-box-detail d-flex me-auto"></div>
                                <div>
                                    <span class="h6 card-title mb-0 d-inline-flex py-2 ps-2 pe-5 lp-bg-black text-white text-uppercase">{{ page.menuLevel1.name }}</span>
                                </div>
                            </div>
                        </div>
                        <div style="background-color:{{ page.menuLevel1.color }}" class="d-flex ms-auto w-90 p-1"></div>
                    </div>
                </div>
                <div class="col-8">
                    {% if page.realizationDateString %}
                        <h6 class="text-muted mb-2"><i class="far fa-clock"></i> {{ page.realizationDateString }}</h6>
                    {% endif %}
                    <h5 class="card-title mb-4">{{ page.name }}</h5>
                    <p class="text-muted">{{ page.summary }}</p>
                    {% if is_archive_view %}
                        <a href="{{ path('front_app_archive_year_page_detail', {'menu': page.menuLevel1.slug, 'year': archive.year, 'slug': page.slug, 'id': page.id}) }}" class="btn btn-outline-dark btn-sm rounded-0 border-2 text-uppercase">{{ 'front.homepage.read_more' | trans }} <i class="fas fa-chevron-right ms-5"></i></a>
                    {% else %}
                        <a href="{{ path('front_app_page_detail', {'menu': page.menuLevel1.slug, 'submenu': page.menuLevel2.slug, 'date': page.publishDate | date(constant('App\\Entity\\AbstractBase::DATAGRID_TYPE_DATE_FORMAT')), 'page': page.slug}) }}" class="btn btn-outline-dark btn-sm rounded-0 border-2 text-uppercase">{{ 'front.homepage.read_more' | trans }} <i class="fas fa-chevron-right ms-5"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="alert alert-warning" role="alert">
        <i class="fas fa-exclamation-triangle me-1"></i> {{ 'front.layout.search.no_results_found' | trans }}
    </div>
{% endif %}
