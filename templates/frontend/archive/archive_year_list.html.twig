{% extends "frontend/base.html.twig" %}

{% set item = knp_menu_get_current_item('frontend_main') %}

{% block title %}{{ archive.year }} · {{ menu }} · {{ parent() }}{% endblock %}

{% block main %}
    <main>
        {% if show_debug_page_info %}
            <div class="container">
                <div class="row my-5">
                    <div class="col">
                        <h1>{{ menu }}</h1>
                        <hr>
                        <pre>MTT# archives</pre>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="container mt-3 pt-3">
            <div class="row">
                <div class="col-12 my-5">
                    <h1 class="m-0">{{ menu }} {{ archive.year }}</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <ul class="nav flex-column">
                        {% for year in archives %}
                            <li class="nav-item border-bottom">
                                <a href="{{ path('front_app_archive_year_list', {'menu': menu.slug, 'year': year.year}) }}" class="nav-link{% if year.year == archive.year %} active{% endif %}">{{ year.year }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-sm-10">
                    <div class="row">
                        {% include "frontend/partials/pages_list.html.twig" with {'is_archive_view': true} %}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block footer_background_color_style_attribute %}{% endblock %}
