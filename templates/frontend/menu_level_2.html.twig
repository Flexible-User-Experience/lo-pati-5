{% extends "frontend/base.html.twig" %}

{% set item = knp_menu_get_current_item('frontend_main') %}

{% block title %}{{ submenu }} 路 {{ menu }} 路 {{ parent() }}{% endblock %}

{% block submenu_header %}
    <header class="d-flex border-bottom">
        <nav class="submenu navbar navbar-light bg-white text-uppercase mx-auto">
            {{ knp_menu_render(item.parent, {'currentClass': 'active', 'depth': 1}) }}
        </nav>
    </header>
{% endblock %}

{% block main %}
    <div class="row my-5">
        <div class="col">
            <h1>{{ submenu }} <span class="text-black-50">路 {{ menu }}</span></h1>
            {% if submenu.page %}
                {% if app.environment == constant('App\\Kernel::DEV_ENV') %}
                    <hr>
                    <pre>P_ID# {{ submenu.page.id }} 路 PTT# '{{ submenu.page.templateTypeTransString | trans }}'</pre>
                {% endif %}
            {% else %}
                <hr>
                <pre>TO DO... {# TODO render empty menu level 2 template #}</pre>
            {% endif %}
        </div>
    </div>
    {% if submenu.page %}
        {% include 'frontend/partials/page_template_types/'~submenu.page.templateTypeString~'.html.twig' %}
    {% endif %}
