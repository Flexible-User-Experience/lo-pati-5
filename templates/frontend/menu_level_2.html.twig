{% extends "frontend/base.html.twig" %}

{% set item = knp_menu_get_current_item('frontend_main') %}

{% block title %}{{ submenu }} 路 {{ menu }} 路 {{ parent() }}{% endblock %}

{% block submenu_header %}
    {{ knp_menu_render(item.parent, {'currentClass': 'active', 'depth': 1}) }}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col">
            <h1>{{ submenu }} <span class="text-black-50">路 {{ menu }}</span></h1>
            <pre>#{{ submenu.id }} 路 #{{ menu.id }}</pre>
        </div>
    </div>
{% endblock %}
