{% extends "frontend/base.html.twig" %}

{% block title %}Menu {{ menu }}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col">
            <h1>Hello World!</h1>
            <pre>{{ menu.name }}</pre>
            <ul class="nav">
                {% for item in menu.menuLevel2items %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">{{ item.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
