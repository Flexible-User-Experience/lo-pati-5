{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block main %}
    {% if slides | length > 0 %}
        <div class="row my-5">
            <div class="col">
                <div id="slideshow" class="carousel carousel-fade slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        {% for slide in slides %}
                            <button type="button" data-bs-target="#slideshow" data-bs-slide-to="{{ loop.index0 }}"{% if loop.first %} class="active" aria-current="true"{% endif %} aria-label="slide {{ loop.index }}"></button>
                        {% endfor %}
                    </div>
                    <div class="carousel-inner">
                        {% for slide in slides %}
                            <div class="carousel-item{% if loop.first %} active{% endif %}">
                                <img src="{{ vich_uploader_asset(slide, 'image1File') | imagine_filter('800x600') }}" class="d-block w-100" alt="{% if slide.imageAltName %}{{ slide.imageAltName }}{% else %}{{ slide.name }}{% endif %}">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col-12">
                <h6 class="text-uppercase mb-0"><img src="{{ asset('build/head_label_b.svg') }}" alt="{{ 'front.layout.title' | trans }}" width="50" class="d-inline-block me-3"> {{ 'front.homepage.highlighted' | trans }}</h6>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for page in highlighted_pages %}
                <div class="col">
                    <div class="card border-0">
                        <div class="position-relative {{ page.menuLevel1.cssBackgroudClassColor }}">
                            <a href="{{ path('front_app_page_detail', {'menu': page.menuLevel1.slug, 'submenu': page.menuLevel2.slug, 'date': page.publishDate | date(constant('App\\Entity\\AbstractBase::DATAGRID_TYPE_DATE_FORMAT')), 'page': page.slug}) }}">
{#                                <img src="{{ vich_uploader_asset(page, 'smallImage1File') | imagine_filter('758x428') }}" class="card-img-top w-50 rounded-0" alt="{{ page.name }}">#}
                                <img src="{{ vich_uploader_asset(page, page.highlitedImageField) | imagine_filter(page.highlitedImageFilter) }}" class="card-img-top rounded-0{% if page.isHighlitedImageSquared %} w-235-px{% endif %}" alt="{{ page.name }}">
                            </a>
                            <div class="position-absolute bottom-0 start-0">
                                <div class="mini-colored-box-detail d-flex me-auto {{ page.menuLevel1.cssBackgroudClassColor }}"></div>
                                <div>
                                    <span class="h5 card-title mb-0 d-inline-flex py-2 ps-2 pe-5 lp-bg-black text-white">{{ page.menuLevel1.name }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex ms-auto w-90 p-1 {{ page.menuLevel1.cssBackgroudClassColor }}"></div>
                        <div class="card-body py-3 px-0">
                            {% if page.realizationDateString %}
                                <h6 class="card-subtitle text-muted mb-2"><i class="far fa-clock"></i> {{ page.realizationDateString }}</h6>
                            {% endif %}
                            <h5 class="card-title mb-4">{{ page.name }}</h5>
                            <a href="{{ path('front_app_page_detail', {'menu': page.menuLevel1.slug, 'submenu': page.menuLevel2.slug, 'date': page.publishDate | date(constant('App\\Entity\\AbstractBase::DATAGRID_TYPE_DATE_FORMAT')), 'page': page.slug}) }}" class="btn btn-outline-dark btn-sm rounded-0 border-2 text-uppercase">{{ 'front.homepage.read_more' | trans }} <i class="fas fa-chevron-right ms-5"></i></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row my-5">
            <div class="col-12">
                {{ knp_pagination_render(highlighted_pages) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
