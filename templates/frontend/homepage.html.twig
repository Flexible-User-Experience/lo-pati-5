{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block main %}
    {% if slides | length > 0 %}
        <div class="row my-5">
            <div class="col">
                <div id="slideshow" class="carousel carousel-fade slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for slide in slides %}
                            <div class="carousel-item{% if loop.first %} active{% endif %}">
                                <img src="{{ vich_uploader_asset(slide, 'image1File') | imagine_filter('800x600') }}" class="d-block w-100" alt="{% if slide.imageAltName %}{{ slide.imageAltName }}{% else %}{{ slide.name }}{% endif %}">
{#                                <div class="carousel-caption d-none d-md-block">#}
{#                                    <h5>{{ slide.name }}</h5>#}
{#                                    {% if slide.description %}#}
{#                                        <p>{{ slide.description }}</p>#}
{#                                    {% endif %}#}
{#                                </div>#}
                            </div>
                        {% endfor %}
                    </div>
{#                    <button class="carousel-control-prev" type="button" data-bs-target="#slideshow" data-bs-slide="prev">#}
{#                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>#}
{#                        <span class="visually-hidden">Previous</span>#}
{#                    </button>#}
{#                    <button class="carousel-control-next" type="button" data-bs-target="#slideshow" data-bs-slide="next">#}
{#                        <span class="carousel-control-next-icon" aria-hidden="true"></span>#}
{#                        <span class="visually-hidden">Next</span>#}
{#                    </button>#}
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col-12">
                <h2 class="text-uppercase">{{ 'front.homepage.highlighted' | trans }}</h2>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            {% for page in highlighted_pages %}
                <div class="col">
                    <div class="card">
                        <a href="{{ path('front_app_page_detail', {'menu': page.menuLevel1.slug, 'submenu': page.menuLevel2.slug, 'date': page.publishDate | date('d-m-Y'), 'page': page.slug}) }}">
                            <img src="{{ vich_uploader_asset(page, 'smallImage1File') | imagine_filter('465x246') }}" class="card-img-top" alt="{{ page.name }}">
                        </a>
                        <div class="p-2 bg-primary text-white">
                            <h5 class="card-title mb-0">{{ page.menuLevel1.name }}</h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ page.name }}</h5>
{#                            <p class="card-text">{{ page.name }}</p>#}
                            <a href="{{ path('front_app_page_detail', {'menu': page.menuLevel1.slug, 'submenu': page.menuLevel2.slug, 'date': page.publishDate | date('d-m-Y'), 'page': page.slug}) }}" class="btn btn-outline-dark btn-sm">{{ 'front.homepage.read_more' | trans }} <i class="fas fa-chevron-right ms-5"></i></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row my-5">
            <div class="col-12">
                {{ knp_pagination_render(highlighted_pages) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
