                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'dashboard.infoboxes.total_artists_amount' | trans }}</span>
                        <span class="info-box-number">{{ total_artists_amount | i }}</span>
                        <div class="progress">
                            {#<!-- the progress section is optional -->#}
                            {#<div class="progress-bar" style="width: 80%"></div>#}
                        </div>
                        <span class="progress-description">{{ last_30_days_artists_amount | i }} {{ 'dashboard.infoboxes.last_30_days_amount_m' | trans }}</span>
                    </div>
